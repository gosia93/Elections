<!DOCTYPE html>
<html>
<head>
  <title>System liczenia głosów w wyborach</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
   <%= current_user.email %>. 
   <%= link_to "Edytuj profil", edit_user_registration_path %>
   <%= link_to "Wyloguj", destroy_user_session_path, :method => :delete %>
<% else %>
   <%= link_to "Zarejestruj", new_user_registration_path %> or <%= link_to "Zaloguj", new_user_session_path %>
<% end %>

<% flash.each do |name, msg| %>
   <%= content_tag :div, msg, id: "flash_#{name}" %>
<% end %>   
<%= yield %>

</body>
</html>
