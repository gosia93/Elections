<div class="container">
  <p id="notice"><%= notice %></p>
    <div class="table-responsive">
      <div class="panel panel-default">
         <div class="panel-heading">Lista użytkowników</div>
           <table class= "table table-bordered table-condensed table-striped">
             <thead>
             <tr>
               <th>Nazwa</th>
               <th>Rola</th>
               <th>Email</th>
               <th colspan="3"></th>
             </tr>
             </thead>
             <tbody>
               <% @users.each do |user| %>
                 <tr>
                   <td><%= user.name %></td>
                   <td><%= user.role.name %></td>
                   <td><%= user.email %></td>
                   <td><%= link_to 'Wyświetl', user %></td>
                   <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
                   <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
       </div>
      </div>
          <div class="col-xs-offset-11">
            <%= link_to 'Dodaj', new_user_path, class: "btn btn-primary" %>
          </div>
   </div>
</div>
