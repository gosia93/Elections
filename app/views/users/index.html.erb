<p id="notice"><%= notice %></p>

<h1>Lista użytkowników</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Rola</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
        <td><%= user.email %></td>

        <td><%= link_to 'Wyświetl', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj użytkownika', new_user_path %>
