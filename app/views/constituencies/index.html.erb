<p id="notice"><%= notice %></p>

<h1>Lista okręgów wyborczych</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numer</th>
      <th>Nazwa</th>
      <th>Miejscowość</th>
      <th>Ilość mandatów</th>
      <th>Liczba osób uprawnionych do głosowania</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constituencies.each do |constituency| %>
      <tr>
        <td><%= constituency.number %></td>
        <td><%= constituency.name %></td>
        <td><%= constituency.town %></td>
        <td><%= constituency.seats %></td>
        <td><%= constituency.electors %></td>
        <td><%= link_to 'Wyświetl', constituency %></td>
        <td><%= link_to 'Edytuj', edit_constituency_path(constituency) %></td>
        <td><%= link_to 'Usuń', constituency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

